# Smart AC Agent Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment mode: cloud or local
DEPLOYMENT_MODE=cloud

# For cloud deployment (GCP VM)
EXTERNAL_URL=https://homeassistant.yourdomain.com
WEBHOOK_URL=https://homeassistant.yourdomain.com:8000/ping
DOMAIN=homeassistant.yourdomain.com

# For local deployment (Coral dev board)
# EXTERNAL_URL=http://192.168.1.100:8123
# WEBHOOK_URL=http://192.168.1.100:8000/ping

# =============================================================================
# IFTTT CONFIGURATION
# =============================================================================

# Get your IFTTT webhook key from https://ifttt.com/maker_webhooks
IFTTT_KEY=your_ifttt_webhook_key_here

# IFTTT event names for your applets
IFTTT_AC_ON_EVENT=ac_on
IFTTT_AC_OFF_EVENT=ac_off

# =============================================================================
# LOCATION CONFIGURATION
# =============================================================================

# Your home coordinates (required for distance calculations)
# Get coordinates from Google Maps or similar service
HOME_LAT=40.7128
HOME_LON=-74.0060

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# OpenAI API key for the AI agent
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Timezone for Home Assistant
TIMEZONE=America/New_York

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# =============================================================================
# CORAL DEV BOARD CONFIGURATION (Local deployment only)
# =============================================================================

# Enable Coral TPU acceleration
CORAL_ENABLED=false

# Path to TensorFlow Lite model for Coral TPU
CORAL_MODEL_PATH=/models/ac_decision_model.tflite

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for securing webhooks (optional)
# WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# AC control thresholds (in miles)
AC_CLOSE_THRESHOLD=0.25
AC_MEDIUM_THRESHOLD=2.0

# Minimum time between AC actions (in minutes)
AC_COOLDOWN_MINUTES=5

# Debug mode (set to true for verbose logging)
DEBUG_MODE=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker restart policy
RESTART_POLICY=unless-stopped

# Memory limits for containers
HOMEASSISTANT_MEMORY_LIMIT=2g
AC_AGENT_MEMORY_LIMIT=1g

# =============================================================================
# EXAMPLES FOR DIFFERENT SCENARIOS
# =============================================================================

# Example 1: Cloud deployment with SSL
# DEPLOYMENT_MODE=cloud
# EXTERNAL_URL=https://homeassistant.mydomain.com
# WEBHOOK_URL=https://homeassistant.mydomain.com:8000/ping
# DOMAIN=homeassistant.mydomain.com

# Example 2: Local deployment without SSL
# DEPLOYMENT_MODE=local
# EXTERNAL_URL=http://192.168.1.100:8123
# WEBHOOK_URL=http://192.168.1.100:8000/ping

# Example 3: Coral dev board with TPU
# DEPLOYMENT_MODE=local
# CORAL_ENABLED=true
# CORAL_MODEL_PATH=/models/ac_decision_model.tflite 